  function calculateCustom() {
    const mainElement = document.getElementById('mainNumbers');
    const mainPoolElement = document.getElementById('mainPool');
    const bonusElement = document.getElementById('bonusNumbers');
    const bonusPoolElement = document.getElementById('bonusPool');

