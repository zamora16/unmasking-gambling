  // Update multiple tickets calculation
  function updateTicketsCalculation() {
    const ticketsSlider = document.getElementById('ticketsSlider');
    const ticketsValue = document.getElementById('ticketsValue');
    const multipleTicketsTime = document.getElementById('multipleTicketsTime');
    const totalCost = document.getElementById('totalCost');
    const realisticTime = document.getElementById('realisticTime');

    if (!ticketsSlider || !ticketsValue || !multipleTicketsTime || !totalCost || !realisticTime) return;

    const tickets = parseInt(ticketsSlider.value);
    const odds = currentOdds;
    
    const weeksToWin = Math.round(odds / tickets);
    const yearsToWin = Math.round(weeksToWin / 52);
    const totalCostValue = weeksToWin * tickets * 2; // Assuming ‚Ç¨2 per ticket
    
    ticketsValue.textContent = tickets;
    multipleTicketsTime.textContent = `${formatNumber(yearsToWin)} a√±os`;
    totalCost.textContent = `‚Ç¨${formatNumber(totalCostValue)}`;
    realisticTime.textContent = `${formatNumber(yearsToWin)} a√±os`;
  }

  // Event listeners
  const btn649 = document.getElementById('btn-6-49');
  const btnEuromillions = document.getElementById('btn-euromillions');
  const btnPowerball = document.getElementById('btn-powerball');
  const btnCustom = document.getElementById('btn-custom');
  const btnCalculateCustom = document.getElementById('btn-calculate-custom');
  const ticketsSlider = document.getElementById('ticketsSlider');

  if (btn649) btn649.addEventListener('click', () => calculateLottery('6-49'));
  if (btnEuromillions) btnEuromillions.addEventListener('click', () => calculateLottery('euromillions'));
  if (btnPowerball) btnPowerball.addEventListener('click', () => calculateLottery('powerball'));
