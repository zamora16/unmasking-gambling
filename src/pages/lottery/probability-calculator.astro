<script>
document.addEventListener('DOMContentLoaded', function() {
  // Lottery configurations
  const lotteryTypes = {
    '6-49': { main: 6, mainPool: 49, bonus: 0, bonusPool: 0, name: 'Loter√≠a 6/49' },
    'euromillions': { main: 5, mainPool: 50, bonus: 2, bonusPool: 12, name: 'Euromillones (5/50 + 2/12)' },
    'powerball': { main: 5, mainPool: 69, bonus: 1, bonusPool: 26, name: 'Powerball (5/69 + 1/26)' }
  };

  let currentOdds = 13983816; // Default for 6/49

  // Calculate combination (n choose k) - MEJORADO para mayor precisi√≥n
  function combination(n, k) {
    if (k > n) return 0;
    if (k === 0 || k === n) return 1;
    if (k > n - k) k = n - k; // Optimize for efficiency
    
    let result = 1;
    for (let i = 0; i < k; i++) {
      result = result * (n - i) / (i + 1);
    }
    return Math.round(result);
  }

  // Calculate lottery probability - VERIFICADO
  function calculateProbability(main, mainPool, bonus, bonusPool) {
    const mainCombinations = combination(mainPool, main);
    const bonusCombinations = bonus > 0 ? combination(bonusPool, bonus) : 1;
    return mainCombinations * bonusCombinations;
  }

  // Format large numbers
  function formatNumber(num) {
    return num.toLocaleString('es-ES');
  }

  // Format percentage properly - CORREGIDO para evitar notaci√≥n cient√≠fica
  function formatPercentage(decimal) {
    if (decimal >= 0.01) {
      return decimal.toFixed(2) + '%';
    } else if (decimal >= 0.001) {
      return decimal.toFixed(3) + '%';
    } else if (decimal >= 0.0001) {
      return decimal.toFixed(4) + '%';
    } else if (decimal >= 0.00001) {
      return decimal.toFixed(5) + '%';
    } else if (decimal >= 0.000001) {
      return decimal.toFixed(6) + '%';
    } else if (decimal >= 0.0000001) {
      return decimal.toFixed(7) + '%';
    } else {
      // Para probabilidades extremadamente peque√±as, usar formato fraccionario
      const odds = Math.round(1 / decimal);
      return `menos de 0.0000001% (1 en ${formatNumber(odds)})`;
    }
  }

  // Update comparison texts
  function updateComparisons(lotteryOdds) {
    const olympic = 662000;
    const actor = 1500000;
    const perfectPitch = 10000;
    const twins = 250;
    const lightning = 1000000;

    const olympicElement = document.getElementById('olympicComparison');
    const actorElement = document.getElementById('actorComparison');
    const perfectPitchElement = document.getElementById('perfectPitchComparison');
    const twinsElement = document.getElementById('twinsComparison');
    const lightningElement = document.getElementById('lightningComparison');

    if (olympicElement) olympicElement.textContent = `${Math.round(lotteryOdds / olympic)} veces m√°s probable`;
    if (actorElement) actorElement.textContent = `${(lotteryOdds / actor).toFixed(1)} veces m√°s probable`;
    if (perfectPitchElement) perfectPitchElement.textContent = `${Math.round(lotteryOdds / perfectPitch).toLocaleString()} veces m√°s probable`;
    if (twinsElement) twinsElement.textContent = `${Math.round(lotteryOdds / twins).toLocaleString()} veces m√°s probable`;
    if (lightningElement) lightningElement.textContent = `${Math.round(lotteryOdds / lightning)} veces m√°s probable`;
  }

  // Generate realistic probability visualization - COMPLETAMENTE NUEVA
  function generateRealisticVisualization(odds) {
    // Actualizar estad√≠sticas del estadio
    const campNouCapacity = 99354;
    const stadiumsNeeded = Math.ceil(odds / campNouCapacity);
    
    const stadiumsElement = document.getElementById('stadiumsNeeded');
    const totalPeopleElement = document.getElementById('totalPeople');
    
    if (stadiumsElement) stadiumsElement.textContent = formatNumber(stadiumsNeeded);
    if (totalPeopleElement) totalPeopleElement.textContent = `${formatNumber(Math.round(odds / 1000000))} millones`;

    // Generar cuadr√≠cula de p√≠xeles m√°s representativa
    const pixelGrid = document.getElementById('pixelGrid');
    if (!pixelGrid) return;
    
    pixelGrid.innerHTML = '';
    
    // 70x20 = 1,400 p√≠xeles, cada uno representa 10,000 billetes
    const totalPixels = 1400; // 70x20
    const ticketsPerPixel = 10000;
    const totalTicketsRepresented = totalPixels * ticketsPerPixel; // 14,000,000
    
    // Determinar si hay un ganador en esta representaci√≥n
    const hasWinner = odds <= totalTicketsRepresented;
    const winnerPosition = hasWinner ? Math.floor(Math.random() * totalPixels) : -1;
    
    for (let i = 0; i < totalPixels; i++) {
      const pixel = document.createElement('div');
      pixel.className = `w-1 h-1 ${i === winnerPosition ? 'bg-green-500' : 'bg-red-500'}`;
      pixelGrid.appendChild(pixel);
    }
  }

  // Calculate and display results - MEJORADO
  function displayResults(config) {
    const odds = calculateProbability(config.main, config.mainPool, config.bonus, config.bonusPool);
    currentOdds = odds;
    
    // Usar el nuevo formato de porcentaje
    const decimal = (1 / odds * 100);
    const formattedPercentage = formatPercentage(decimal);
    
    const yearsToWin = Math.round(odds / 52);
    
    const mainProbElement = document.getElementById('mainProbability');
    const percentageElement = document.getElementById('percentageProbability');
    const timeToWinElement = document.getElementById('timeToWin');
    const lotteryOddsElement = document.getElementById('lotteryOdds');

    if (mainProbElement) mainProbElement.textContent = `1 en ${formatNumber(odds)}`;
    if (percentageElement) percentageElement.textContent = `${formattedPercentage} de probabilidad`;
    if (timeToWinElement) {
      timeToWinElement.innerHTML = 
        `Si compras 1 billete cada semana, estad√≠sticamente tardar√≠as <strong>${formatNumber(yearsToWin)} a√±os</strong> en ganar.`;
    }
    if (lotteryOddsElement) lotteryOddsElement.textContent = `1 en ${formatNumber(odds)}`;
    
    updateComparisons(odds);
    generateRealisticVisualization(odds);
    updateTicketsCalculation();
    
    const resultsSection = document.getElementById('resultsSection');
    if (resultsSection) resultsSection.classList.remove('hidden');
  }

  // Handle lottery type selection
  function calculateLottery(type) {
    const customSettings = document.getElementById('customSettings');
    
    if (type === 'custom') {
      if (customSettings) customSettings.classList.remove('hidden');
      return;
    }
    
    if (customSettings) customSettings.classList.add('hidden');
    const config = lotteryTypes[type];
    if (config) displayResults(config);
  }

