    if (main > mainPool || bonus > bonusPool || main < 1 || mainPool < main) {
      alert('Configuraci√≥n inv√°lida. Revisa los n√∫meros ingresados.');
      return;
    }
    
    const config = { main, mainPool, bonus, bonusPool, name: 'Loter√≠a Personalizada' };
    displayResults(config);
