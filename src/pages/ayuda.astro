<script>
// Integración con el sistema de crisis management
document.addEventListener('DOMContentLoaded', () => {
  // Función para mostrar recursos por país
  window.showCountry = function(country) {
    // Ocultar todos los recursos
    document.querySelectorAll('.country-resources').forEach(el => {
      el.classList.add('hidden');
    });
    
    // Mostrar el país seleccionado
    const selectedCountry = document.getElementById(country + '-resources');
    if (selectedCountry) {
      selectedCountry.classList.remove('hidden');
    }
    
    // Actualizar botones
    document.querySelectorAll('.country-btn').forEach(btn => {
      btn.classList.remove('active', 'bg-red-600', 'text-white');
      btn.classList.add('bg-gray-200', 'text-gray-700');
    });
    
    // Activar el botón seleccionado
    const selectedBtn = document.querySelector(`[data-country="${country}"]`);
    if (selectedBtn) {
      selectedBtn.classList.remove('bg-gray-200', 'text-gray-700');
      selectedBtn.classList.add('active', 'bg-red-600', 'text-white');
    }
  };
  
  // Botón para abrir el modal de crisis desde la página de ayuda
  const openCrisisBtn = document.getElementById('open-crisis-help');
  if (openCrisisBtn) {
    openCrisisBtn.addEventListener('click', () => {
      // Buscar el botón de crisis flotante del sistema global y hacer click
      const crisisFloatingBtn = document.getElementById('crisis-help-btn');
      if (crisisFloatingBtn) {
        crisisFloatingBtn.click();
      }
    });
  }

  // Detectar si el usuario llegó aquí desde una situación de crisis
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('urgente') === 'true') {
    // Auto-abrir el modal de crisis
    setTimeout(() => {
      const crisisFloatingBtn = document.getElementById('crisis-help-btn');
      if (crisisFloatingBtn) {
        crisisFloatingBtn.click();
      }
    }, 1000);
  }

  // Hacer funcional la autoevaluación
  let evaluationAnswers = [];
  const questions = document.querySelectorAll('.flex.items-start');
  
  questions.forEach((question, index) => {
    question.style.cursor = 'pointer';
    question.addEventListener('click', () => {
      const wasSelected = question.classList.contains('bg-red-100');
      
      if (wasSelected) {
        question.classList.remove('bg-red-100', 'border', 'border-red-300', 'rounded-lg', 'p-2');
        evaluationAnswers = evaluationAnswers.filter(i => i !== index);
      } else {
        question.classList.add('bg-red-100', 'border', 'border-red-300', 'rounded-lg', 'p-2');
        evaluationAnswers.push(index);
      }
      
      updateEvaluation();
    });
  });
  
  function updateEvaluation() {
    // Buscar o crear el div de resultados
    let resultDiv = document.getElementById('evaluation-result');
    if (!resultDiv) {
      resultDiv = document.createElement('div');
      resultDiv.id = 'evaluation-result';
      resultDiv.className = 'mt-6 p-4 rounded-lg';
      
      const evalSection = document.querySelector('.bg-white.rounded-xl.shadow-lg.p-8');
      if (evalSection) {
        evalSection.appendChild(resultDiv);
      }
    }
    
    const count = evaluationAnswers.length;
    let message, bgColor, textColor, recommendation;
    
    if (count === 0) {
      resultDiv.innerHTML = '';
      return;
    }
    
    if (count <= 2) {
      bgColor = 'bg-yellow-50';
      textColor = 'text-yellow-800';
      message = `Has marcado ${count} señales de alerta.`;
      recommendation = 'Mantén límites claros y considera usar herramientas de autocontrol.';
    } else if (count <= 4) {
      bgColor = 'bg-orange-50';
      textColor = 'text-orange-800';
      message = `Has marcado ${count} señales de alerta.`;
      recommendation = 'Te recomendamos hablar con un profesional y establecer límites más estrictos.';
    } else {
      bgColor = 'bg-red-50';
      textColor = 'text-red-800';
      message = `Has marcado ${count} señales de alerta.`;
      recommendation = 'Te recomendamos encarecidamente buscar ayuda profesional inmediatamente.';
    }
    
    resultDiv.className = `mt-6 p-4 rounded-lg border-l-4 ${bgColor} ${
      count <= 2 ? 'border-yellow-400' : count <= 4 ? 'border-orange-400' : 'border-red-400'
    }`;
    
    let actionButton = '';
    if (count > 4) {
      actionButton = `
        <button onclick="document.getElementById('crisis-help-btn').click()" 
                class="mt-3 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
          🆘 Buscar ayuda inmediata
        </button>
      `;
    } else if (count > 2) {
      actionButton = `
        <a href="tel:900200225" 
           class="mt-3 inline-block px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors">
          📞 Llamar línea de ayuda
        </a>
      `;
    }
    
    resultDiv.innerHTML = `
      <div class="flex items-start">
        <div class="flex-shrink-0 w-6 h-6 ${
          count <= 2 ? 'bg-yellow-400' : count <= 4 ? 'bg-orange-400' : 'bg-red-400'
        } rounded-full flex items-center justify-center mr-3 mt-1">
          <div class="w-3 h-3 bg-white rounded-full"></div>
        </div>
        <div class="flex-1">
          <p class="${textColor} font-semibold">${message}</p>
          <p class="${textColor} mt-1">${recommendation}</p>
          ${actionButton}
        </div>
      </div>
    `;
  }
  
  // Agregar instrucciones para la autoevaluación
  const evalTitle = document.querySelector('.bg-white.rounded-xl.shadow-lg.p-8 h3');
  if (evalTitle) {
    const instructions = document.createElement('p');
    instructions.className = 'text-gray-600 mb-4 text-center';
    instructions.textContent = 'Haz click en las afirmaciones que se aplican a tu situación:';
    evalTitle.parentNode.insertBefore(instructions, evalTitle.nextSibling);
  }
});
</script>