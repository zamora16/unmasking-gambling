            🚫 Autoexclusión
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Self-Assessment -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
