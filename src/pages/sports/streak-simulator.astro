    setTimeout(() => {
      try {
        simulationData = simulateBettors(numBettors, betsPerBettor, winRate);
        console.log('Simulation data:', simulationData.length, 'bettors');
        updateChart();
        updateStats();
        updateLiveFeed();
        showAll(); // Reset filter
        
        btn.textContent = 'ğŸ² Simular Otra Vez';
